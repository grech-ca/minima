// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Message {
  id             String        @id @default(cuid())
  content        String
  author         User          @relation(fields: [authorId], references: [id])
  authorId       String
  conversation   Conversation? @relation(fields: [conversationId], references: [id])
  conversationId String?
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @default(now())
}

model Conversation {
  id          String    @id @default(cuid())
  name        String?
  members     User[]    @relation("conversations")
  messages    Message[]
  multiple    Boolean   @default(false)
  createdBy   User      @relation(fields: [createdById], references: [id])
  createdById String
  createdAt   DateTime  @default(now())
}

model User {
  id            String         @id @default(cuid())
  name          String         @unique
  status        String?
  email         String         @unique
  avatarIcon    String
  avatarColor   String
  password      String
  conversations Conversation[] @relation("conversations")
  messages      Message[]
  posts         Post[]
  savedPosts    Post[]         @relation("savedPosts")
  likedPOsts    Post[]         @relation("likedPosts")
  comments      Comment[]
  Conversation  Conversation[]
  createdAt     DateTime       @default(now())
}

model Post {
  id        String    @id @default(cuid())
  title     String
  slug      String    @unique
  content   String
  author    User      @relation(fields: [authorId], references: [id])
  authorId  String
  savedBy   User[]    @relation("savedPosts")
  likedBy   User[]    @relation("likedPosts")
  createdAt DateTime  @default(now())
  comments  Comment[]
}

model Comment {
  id              String    @id @default(cuid())
  author          User      @relation(fields: [authorId], references: [id])
  authorId        String
  content         String
  replyTo         Comment?  @relation("repliedComments", fields: [replyToId], references: [id])
  replyToId       String?
  post            Post      @relation(fields: [postId], references: [id])
  postId          String
  createdAt       DateTime  @default(now())
  repliedComments Comment[] @relation("repliedComments")
}
